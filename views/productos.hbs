<div class="well">
    {{#if productos}}
        <table class="table">
            <thead>
                <tr>
                    <th>Producto</th>
                    <th>Precio</th>
                    <th>Thumbnail</th>
                </tr>
            </thead>
            <tbody>
                {{#each productos}}
                    <tr>
                        <td>{{this.title}}</td>
                        <td>{{this.price}}</td>
                        <td>{{this.thumbnail}}</td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    {{else}}
        <h2>No hay productos</h2>
    {{/if}}
</div>
